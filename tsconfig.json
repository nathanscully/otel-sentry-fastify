{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ESNext",
    "strict": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src"
  },
  "include": ["src/**/*.ts"]
}
